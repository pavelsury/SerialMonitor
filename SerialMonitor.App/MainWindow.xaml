<Window x:Class="SerialMonitor.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:business="clr-namespace:SerialMonitor.Business;assembly=SerialMonitor2.Business"
        mc:Ignorable="d"
        Title="Serial Monitor Test App" Height="450" Width="800"
        d:DataContext="{d:DesignInstance business:PortManager}"
        Closed="OnClosed">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SerialMonitor2.Ui;component/Converters/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Background>
        <Binding Path="SettingsManager.BackgroundColor" Converter="{StaticResource ColorToBrushConverter}"/>
    </Window.Background>
</Window>
