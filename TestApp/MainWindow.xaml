<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:SerialMonitor.Ui;assembly=SerialMonitor2"
        xmlns:business="clr-namespace:SerialMonitor.Business;assembly=SerialMonitor2"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance business:ModelFactory}"
        Title="MainWindow" Height="450" Width="800"
        Closed="OnClosed">

    <ui:SerialMonitorControl x:Name="SerialMonitorControl" DataContext="{Binding SerialPortManager}"/>
</Window>
